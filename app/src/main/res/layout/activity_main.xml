<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/spongeswag">

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:text="Summoner Name:"
        android:textColor="#fff"
        android:id="@+id/nameText"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/button1"
        android:layout_toStartOf="@+id/button1" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:background="#fff"
        android:gravity="center"
        android:id="@+id/nameEdit"
        android:hint="@string/edittext"
        android:layout_below="@+id/nameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="48dp"
        android:layout_height="20dp"
        android:background="#d0ff4f02"
        android:layout_alignBottom="@+id/nameEdit"
        android:layout_toRightOf="@+id/nameEdit"
        android:layout_toEndOf="@+id/nameEdit"
        android:layout_marginLeft="5dp"
        android:text="GO!"
        android:id="@+id/button1"
        android:onClick="button1()" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:textSize="20sp"
        android:text="Line 1"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_below="@+id/nameEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line2"
        android:textSize="20sp"
        android:text="Line 2"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_alignTop="@+id/line1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line3"
        android:textSize="20sp"
        android:text="Line 3"
        android:layout_below="@+id/line2"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line4"
        android:textSize="20sp"
        android:text="Line 4"
        android:layout_below="@+id/line3"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textColor="#fff" />

</RelativeLayout>
